services:
  api:
    build: .
    container_name: oqs_step2_api
    environment:
      - APP_ENV=production
      - OLLAMA_BASE_URL=http://ollama:11434
      - OLLAMA_MODEL=llama3.2:3b-instruct
    ports:
      - "127.0.0.1:9100:8000"
    depends_on:
      - ollama

  ollama:
    image: ollama/ollama:latest
    container_name: ollama
    restart: unless-stopped
    # sem ports: apenas rede interna do compose
    volumes:
      - ollama_data:/root/.ollama

volumes:
  ollama_data:
